# Test configuration for auth milter smtp
{

    "debug"                           : 1,
    "dryrun"                          : 0,
    "logtoerr"                        : 1,
    "error_log"                       : "tmp/smtp.err",
    "connection"                      : "unix:tmp/authentication_milter_test.sock",
    "umask"                           : "0000",
    "connect_timeout"                 : 55,
    "command_timeout"                 : 55,
    "content_timeout"                 : 595,
    "tempfail_on_error"               : 1,
    "tempfail_on_error_authenticated" : 1,
    "tempfail_on_error_local"         : 1,
    "tempfail_on_error_trusted"       : 1,

    "metric_connection"               : "unix:tmp/authentication_milter_test_metrics.sock",
    "metric_umask"                    : "0000",

    "protocol" : "smtp",
    "smtp" : {
        "sock_type" : "unix",
        "sock_path" : "tmp/authentication_milter_smtp_out.sock",
        "pipeline_limit" : "4",
    },

    "listen_backlog"         : 1,
    "min_children"           : 1,
    "max_children"           : 2,
    "min_spare_children"     : 1,
    "max_spare_children"     : 1,
    "max_requests_per_child" : 1000,

    "dns_resolvers" : [ "127.0.0.1" ],

    "handlers" : {
        "SPF" : {
            "hide_none" : 0
        },
        "DMARC" : {
            "hard_reject" : 1,
            "hide_none" : 0,
            "whitelisted" : [ "99.0.0.0/8" ],
            "detect_list_id" : 1
        },
        "DKIM" : {
            "hide_none" : 0,
            "show_default_adsp" : 0,
            "check_adsp" : 1,
            "adsp_hide_none" : 0
        },
        "PTR" : {},
        "SenderID" : {
            "hide_none" : 1
        },
        "IPRev" : {},
        "Auth" : {},
        "LocalIP" : {},
        "TrustedIP" : {
            "trusted_ip_list" : [
                "123.123.12.3"
            ]
        },
        "TLS" : {},
        "!AddID" : {},
        "!ReturnOK" : {},
        "Sanitize" : {
            "hosts_to_remove" : [
                "test.module"
            ],
            "remove_headers" : "yes"
        }
    }

}
